{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "paths": {
      "~src/*": ["./*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "noImplicitAny": true,
    "importsNotUsedAsValues": "preserve"
  },
  "exclude": ["node_modules", "coverage", "dist"]
}
